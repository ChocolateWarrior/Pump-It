<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="4dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/listing_user_avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_avatar"
            app:civ_border_color="#3f51b5"
            app:civ_border_width="1dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#3f51b5" />

        <TextView
            android:id="@+id/view_username"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical|end"
            android:layout_marginStart="19dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/listing_user_avatar"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical|start"
            android:text="@string/line_1"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_desc"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical|end"
            android:layout_alignTop="@+id/view_username"
            android:layout_marginStart="19dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/listing_user_avatar"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical|start"
            android:text="@string/line_2"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/remove_button"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical|end"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/view_username"
            android:background="@drawable/mybutton"
            android:fontFamily="sans-serif-light"
            android:text="@string/remove"
            android:textColor="@color/lightGrey"
            android:textSize="16sp"
            android:textStyle="normal" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>